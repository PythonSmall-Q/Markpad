{
    "name": "markpad",
    "version": "1.0.0",
    "description": "A powerful Markdown notebook application with Vue 3 and Electron",
    "main": "electron/main.js",
    "type": "module",
    "scripts": {
        "dev": "vite",
        "build": "vite build",
        "preview": "vite preview",
        "electron": "electron .",
        "electron:dev": "concurrently \"npm run dev\" \"wait-on tcp:5174 && cross-env NODE_ENV=development electron .\"",
        "electron:build": "npm run build && electron-builder",
        "electron:build:dir": "npm run build && electron-builder --dir",
        "electron:build:win": "npm run build && electron-builder --win",
        "electron:build:mac": "npm run build && electron-builder --mac",
        "electron:build:linux": "npm run build && electron-builder --linux",
        "lint": "eslint . --fix",
        "format": "prettier --write src/"
    },
    "keywords": [
        "markdown",
        "electron",
        "vue",
        "notebook",
        "editor"
    ],
    "author": "Your Name",
    "license": "MIT",
    "dependencies": {
        "@element-plus/icons-vue": "^2.3.1",
        "@toast-ui/editor": "^3.2.2",
        "element-plus": "^2.8.8",
        "marked": "^14.1.3",
        "pinia": "^2.2.6",
        "vue": "^3.5.12",
        "vue-i18n": "^10.0.8",
        "vue-router": "^4.4.5"
    },
    "devDependencies": {
        "@eslint/js": "^9.16.0",
        "@vitejs/plugin-vue": "^5.2.1",
        "concurrently": "^9.1.0",
        "cross-env": "^7.0.3",
        "electron": "^28.2.0",
        "electron-builder": "^24.13.3",
        "eslint": "^9.16.0",
        "eslint-plugin-vue": "^9.31.0",
        "globals": "^15.13.0",
        "prettier": "^3.4.2",
        "sass": "^1.83.0",
        "vite": "^6.0.3",
        "wait-on": "^8.0.1"
    },
    "overrides": {
        "inflight": "npm:@jsdevtools/inflight@^2.0.0",
        "rimraf": "^6.0.1",
        "glob": "^11.0.0",
        "tar": "^7.4.3"
    },
    "build": {
        "appId": "com.markpad.app",
        "productName": "Markpad",
        "directories": {
            "output": "dist-electron"
        },
        "files": [
            "dist/**/*",
            "electron/**/*"
        ],
        "win": {
            "target": [
                "nsis"
            ]
        },
        "mac": {
            "target": [
                "dmg"
            ]
        },
        "linux": {
            "target": [
                "AppImage"
            ]
        }
    }
}