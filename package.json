{
    "name": "markpad",
    "version": "1.0.0",
    "description": "A powerful Markdown notebook application with Vue 3 and Electron",
    "main": "electron/main.js",
    "type": "module",
    "repository": {
        "type": "git",
        "url": "https://github.com/PythonSmall-Q/Markpad.git"
    },
    "scripts": {
        "dev": "vite",
        "build": "vite build",
        "preview": "vite preview",
        "electron": "electron .",
        "electron:dev": "concurrently \"npm run dev\" \"wait-on tcp:5174 && cross-env NODE_ENV=development electron .\"",
        "electron:build": "npm run build && electron-builder --publish never",
        "electron:build:dir": "npm run build && electron-builder --dir",
        "electron:build:win": "npm run build && electron-builder --win --publish never",
        "electron:build:mac": "npm run build && electron-builder --mac --publish never",
        "electron:build:linux": "npm run build && electron-builder --linux --publish never",
        "lint": "eslint . --fix",
        "format": "prettier --write src/"
    },
    "keywords": [
        "markdown",
        "electron",
        "vue",
        "notebook",
        "editor"
    ],
    "author": "PythonSmall-Q",
    "license": "MIT",
    "dependencies": {
        "@element-plus/icons-vue": "^2.3.1",
        "@toast-ui/editor": "^3.2.2",
        "electron-updater": "^6.7.3",
        "element-plus": "^2.8.8",
        "marked": "^14.1.3",
        "pinia": "^2.2.6",
        "vue": "^3.5.12",
        "vue-i18n": "^10.0.8",
        "vue-router": "^4.4.5"
    },
    "devDependencies": {
        "@eslint/js": "^9.16.0",
        "@vitejs/plugin-vue": "^5.2.1",
        "concurrently": "^9.1.0",
        "cross-env": "^7.0.3",
        "electron": "^28.2.0",
        "electron-builder": "^24.13.3",
        "eslint": "^9.16.0",
        "eslint-plugin-vue": "^9.31.0",
        "globals": "^15.13.0",
        "prettier": "^3.4.2",
        "sass": "^1.83.0",
        "vite": "^6.0.3",
        "wait-on": "^8.0.1"
    },
    "overrides": {
        "inflight": "npm:@jsdevtools/inflight@^2.0.0",
        "rimraf": "^6.0.1",
        "glob": "^11.0.0",
        "tar": "^7.4.3"
    },
    "build": {
        "appId": "com.pythonsmallq.markpad",
        "productName": "Markpad",
        "copyright": "Copyright Â© 2026 PythonSmall-Q",
        "directories": {
            "output": "dist-electron",
            "buildResources": "build"
        },
        "files": [
            "dist/**/*",
            "electron/**/*"
        ],
        "asarUnpack": [
            "electron/preload.cjs"
        ],
        "win": {
            "icon": "build/icons/icon.ico",
            "target": [
                {
                    "target": "nsis",
                    "arch": [
                        "x64"
                    ]
                }
            ],
            "publisherName": "PythonSmall-Q",
            "verifyUpdateCodeSignature": false
        },
        "publish": [
            {
                "provider": "github",
                "owner": "PythonSmall-Q",
                "repo": "Markpad"
            }
        ],
        "nsis": {
            "oneClick": false,
            "allowToChangeInstallationDirectory": true,
            "allowElevation": true,
            "perMachine": true,
            "createDesktopShortcut": true,
            "createStartMenuShortcut": true,
            "shortcutName": "Markpad",
            "installerIcon": "build/icons/icon.ico",
            "uninstallerIcon": "build/icons/icon.ico",
            "installerHeaderIcon": "build/icons/icon.ico",
            "license": "LICENSE",
            "language": "2052",
            "warningsAsErrors": false,
            "deleteAppDataOnUninstall": false,
            "displayLanguageSelector": false,
            "installerLanguages": [
                "en_US",
                "zh_CN"
            ],
            "multiLanguageInstaller": false,
            "packElevateHelper": true,
            "runAfterFinish": true,
            "menuCategory": false
        },
        "mac": {
            "icon": "build/icons/icon.icns",
            "target": [
                "dmg"
            ],
            "category": "public.app-category.productivity",
            "darkModeSupport": true
        },
        "dmg": {
            "background": "build/icons/dmg-background.png",
            "icon": "build/icons/icon.icns",
            "iconSize": 100,
            "contents": [
                {
                    "x": 380,
                    "y": 180,
                    "type": "link",
                    "path": "/Applications"
                },
                {
                    "x": 130,
                    "y": 180,
                    "type": "file"
                }
            ],
            "window": {
                "width": 540,
                "height": 380
            }
        },
        "linux": {
            "icon": "build/icons/",
            "target": [
                "AppImage",
                "deb"
            ],
            "category": "Office",
            "desktop": {
                "Name": "Markpad",
                "Comment": "A powerful Markdown notebook application",
                "Categories": "Office;TextEditor;Utility;"
            }
        }
    }
}